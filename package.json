{
  "name": "idgm-monorepo",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*",
    "backend/*"
  ],
  "scripts": {
    "dev:web": "cd apps/web && npm run dev",
    "dev:admin": "cd apps/admin && npm run dev",
    "dev:api": "cd backend/api && npm run dev",
    "dev:all": "concurrently -n API,ADMIN,WEB -c green,blue,magenta \"npm:dev:api\" \"npm:dev:admin\" \"npm:dev:web\"",
    "dev:site": "concurrently -n API,WEB -c green,magenta \"npm:dev:api\" \"npm:dev:web\"",
    "build:web": "cd apps/web && npm run build",
    "build:admin": "cd apps/admin && npm run build",
    "db:gen": "prisma generate --schema packages/db/prisma/schema.prisma",
    "db:push": "prisma db push --schema packages/db/prisma/schema.prisma",
    "db:seed": "ts-node packages/db/prisma/seed.ts",
    "db:studio": "prisma studio --schema packages/db/prisma/schema.prisma",
    "db:reset": "prisma db push --force-reset --schema packages/db/prisma/schema.prisma && npm run db:seed",
    "install:all": "npm install && cd apps/web && npm install"
  },
  "devDependencies": {
    "@prisma/nextjs-monorepo-workaround-plugin": "^6.19.0",
    "@types/node": "^20.12.12",
    "concurrently": "^9.2.1",
    "prisma": "^5.17.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.0"
  },
  "dependencies": {
    "@prisma/client": "^5.17.0"
  }
}
